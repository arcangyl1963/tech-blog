<div class="blog-posts">
    <article class="card">
        <div class="flex-row card-header">
            <h2>{{post.title}}</h2>
            <span>Posted by {{post.User.username}} on {{format_date post.createdAt}}</span>
        </div>
        <div class="card-body">
            {{post.body}}
        </div>
    </article>
    {{#if post.Comment}}
    <div class="card">
        <div class="card-header">
            <h2>Comments</h2>
        </div>
        <div class="card-body">
            {{#each post.Comment}}
            <p>
                {{body}}
            </p>
            <p>
                {{User.username}} â€¢ {{format_date createdAt}}
            </p>
        </div>
        {{/each}}
    </div>
    {{/if}}
    <form class="card" id="new-comment-form">
        <div class="card-header">
            <h3>Add Comment</h3>
        </div>
        <div class="card-body">
            <input name="post-id" value="{{post.id}}" type="hidden" />
            <label class="form-label" for="comment-body">New Comment</label>
            <textarea class="form-input" name="comment-body"></textarea>
            <button class="btn" type="submit">Submit Comment</button>
        </div>
    </form>
</div>
<script src="/js/comment.js"></script>