<div class="blog-posts">
    {{#each posts}}
    <article class="card">
        <h3>
            <a href="/posts/{{id}}">{{title}}</a>
        </h3>
        <span>Posted by {{User.username}} on {{format_date createdOn}}</span>
        <div class="card-body">
            {{body}}
        </div>
    </article>
    {{/each}}
</div>