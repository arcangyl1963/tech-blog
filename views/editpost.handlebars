<div class="blog-post card">
    <div class="card-header">
        <h2>Edit Post</h2>
    </div>
    <form id="edit-post-form" class="card-body">
        <input type="hidden" name="post-id" value="{{post.id}}" />
        <label class="form-label" for="post-title">Title</label>
        <input class="form-input" type="text" name="post-title" value="{{post.title}}" />
        <label class="form-label" for="post-body">Post Content</label>
        <textarea class="form-input" name="post-body">{{post.body}}</textarea>
        <button type="submit" class="btn">Update Post</button>
        <button type="button" id="delete-btn" class="btn">Delete Post</button>
    </form>
</div>
<script src="/js/edit-delete.js"></script>